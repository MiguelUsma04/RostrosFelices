@page
@model Examen2.Pages.Invoices.IndexModel
@{
    ViewData["Title"] = "Index Invoices";
}
<h1>Index Invoices</h1>

<p>
    <a asp-page="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">

    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Invoices[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoices[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoices[0].EmployeeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoices[0].ClientId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoices[0].ServiceId)
            </th>

            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Invoices)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClientId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ServiceId)
                </td>

                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>

            </tr>
        }
    </tbody>

</table>